---
title: Hello World
layout: layouts/base.njk
---

<div class="post">
    <div class="header">
        <h1>{{ title }}</h1>
        <div class="date">{{ page.date | postDate }}</div>
    </div>

    

    <div class="tags">
        {%- for tag in tags -%}
        <div class="tag tag-{{ tag }}">{{ tag }}</div>
        {%- endfor -%}
    </div>

    {{ content | safe }}
</div>