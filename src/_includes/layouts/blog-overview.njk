---
title: Blog
layout: layouts/page.njk
---

{{ content | safe }}

<div class="blog-overview">
{%- for post in pagination.items -%}
  <a href="{{post.url}}" class="overview-post">
    {% if post.data.previewImage != ""  %}
    <div class="previewImage">
        <img src="https://suterdev-public-resized.s3.eu-west-2.amazonaws.com/github-pages-public/{{ post.data.previewImage }}"/>
    </div>
    {% endif %}
    <div class="title">{{ post.data.title }}</div>
    <div class="content">
      {{ post.content | trimShort | removeHTML }}
    </div>
  </a>
{%- endfor -%}
</div>

<div class="pagination">

  <div class="pagination-menu">
    <div class="link"><a href="{{ pagination.href.previous}}">Previous</a></div>
{%- for pageEntry in pagination.pages %}
    <div class="link">
      {%- if page.url != pagination.hrefs[ loop.index0 ] %} 
        <a href="{{ pagination.hrefs[ loop.index0 ] }}">{{ loop.index }}</a>
      {% else %}
        <a class="active" >{{ loop.index }}</a>
      {% endif %}
    </div>
{%- endfor %}
    <div class="link"><a href="{{ pagination.href.next}}">Next</a></div>
  </div>
</div>